        "prettier": "^3.6.2",
        "ts-mockito": "^2.6.1",
        "tsx": "^4.20.5",
        "type-fest": "^4.41.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.40.0"
    },
    "dependencies": {
        "docx": "^9.5.1",
