{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es2020",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true, // Needed for jszip as of 3.10.1
        "lib": [
            "DOM",
            "es2020",
        ],
        "outDir": "dist",
        "rootDir": "src",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test/*"
    ]
}