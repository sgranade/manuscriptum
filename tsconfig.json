{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true, // Needed for jszip as of 3.10.1
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "outDir": "out",
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test/*"
    ]
}